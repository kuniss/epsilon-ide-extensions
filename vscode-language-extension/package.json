{
    "name": "epsilon-eag",
    "displayName": "EpsilonEAG",
    "description": "Specification Language for Extended Affix Grammars",
    "version": "2.0.0",
    "publisher": "grammarcraft",
    "license": "EPL-2.0",
    "homepage": "https://github.com/kuniss/epsilon-ide-extensions/blob/master/vscode-language-extension/README.md",
    "bugs": {
        "url": "https://github.com/kuniss/epsilon-ide-extensions/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kuniss/epsilon-ide-extensions.git"
    },
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "epsilon",
                "aliases": [
                    "Epsilon EAG Grammar",
                    "epsilon"
                ],
                "extensions": [
                    ".eps",
                    ".epsilon",
                    ".eag"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "epsilon",
                "scopeName": "source.epsilon",
                "path": "./syntaxes/epsilon.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Epsilon LS client configuration",
            "properties": {
                "epsilon.executable": {
                    "type": "string",
                    "default": "./epsilon",
                    "description": "Defines the path to the Epsilon executable which is used to generated compilers and to validate grammars.\nIn case, a relative path is given then it will be relative to the project's root directory.\nNote: This may be overwritten if defining an environment variable 'EPSILON_EXE'.\nChanges will be applied after restart. Alternatively, command 'Reload Window' may be executed."
                },
                "epsilon.target.dir": {
                    "type": "string",
                    "default": "./build/",
                    "description": "Defines the path to a directory where the generated compiler atrifacts will be written to.\nIn case, a relative path is given then it will be relative to the project's root directory.\nNote: This may be overwritten if defining an environment variable 'EPSILON_TARGET_DIR'.\nChanges will be applied after restart. Alternatively, command 'Reload Window' may be executed."
                }
            }
        },
        "snippets": [
            {
                "language": "epsilon",
                "path": "./snippets.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:epsilon"
    ],
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./client",
        "compile": "tsc -watch -p ./client"
    },
    "devDependencies": {
        "@types/node": "^8.10.48",
        "typescript": "^3.8.3",
        "@types/vscode": "^1.42.0"
    },
    "dependencies": {
        "vscode-languageclient": "^3.1.0"
    }
}
